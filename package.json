{
  "name": "oshidora",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm --prefix apps/api run dev",
    "dev:mobile": "npm --prefix apps/mobile start",
    "deploy:api": "npm --prefix apps/api run deploy",
    "db:migrate:local": "npm --prefix apps/api run db:migrate:local",
    "db:migrate:remote": "npm --prefix apps/api run db:migrate:remote",
    "build:web": "npm -w apps/mobile run export:web",
    "build:admin": "node -e \"console.log('No build for admin (static)')\"",
    "deploy:admin": "./apps/api/node_modules/.bin/wrangler pages deploy apps/admin/dist --project-name oshidora-admin --branch main --commit-dirty=true --commit-message \"Deploy admin\""
  }
}
