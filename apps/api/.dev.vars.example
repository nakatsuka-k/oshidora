# Local dev vars for `wrangler dev`
# Copy to `.dev.vars` (this file is gitignored) and fill values.

# Cloudflare Stream
CLOUDFLARE_ACCOUNT_ID=c6270d2ac0aefb2ca6ce6831cbc9ca30
CLOUDFLARE_STREAM_API_TOKEN=REPLACE_WITH_YOUR_STREAM_API_TOKEN

# Cloudflare Stream Signed URL (create a signing key in Cloudflare Dashboard)
# Stream -> Settings -> Signed URLs
CLOUDFLARE_STREAM_SIGNING_KEY_ID=REPLACE_WITH_SIGNING_KEY_ID

# Use the private JWK returned by Cloudflare (data.result.jwk).
# JSON string or base64/base64url-encoded JSON are accepted.
# (For backward compat, the API also accepts this value via CLOUDFLARE_STREAM_SIGNING_KEY_SECRET.)
CLOUDFLARE_STREAM_SIGNING_KEY_JWK=REPLACE_WITH_SIGNING_KEY_JWK

# R2 (S3 API)
# NOTE: Do NOT commit real keys. Put real values in `.dev.vars` or `wrangler secret put`.
R2_BUCKET=assets
R2_PUBLIC_BASE_URL=https://pub-a2d549876dd24a08aebc65d95ed4ff91.r2.dev
R2_ACCESS_KEY_ID=REPLACE_WITH_R2_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=REPLACE_WITH_R2_SECRET_ACCESS_KEY

# Auth (JWT + verification codes)
AUTH_JWT_SECRET=REPLACE_WITH_RANDOM_LONG_SECRET
AUTH_CODE_PEPPER=REPLACE_WITH_RANDOM_LONG_SECRET

# Debug: return verification codes in API response (dev only)
ALLOW_DEBUG_RETURN_CODES=1

# Email (MailChannels)
MAIL_FROM=info@oshidra.com
MAIL_FROM_NAME=Oshidora

# SMS (Twilio)
TWILIO_ACCOUNT_SID=REPLACE_WITH_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_TWILIO_AUTH_TOKEN
TWILIO_FROM=REPLACE_WITH_TWILIO_FROM_E164

# Stripe (subscription)
# Secrets (use `.dev.vars` locally; use `wrangler secret put` in Cloudflare)
STRIPE_SECRET_KEY=REPLACE_WITH_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=REPLACE_WITH_STRIPE_WEBHOOK_SECRET

# Non-secrets
STRIPE_SUBSCRIPTION_PRICE_ID=REPLACE_WITH_STRIPE_PRICE_ID
STRIPE_CHECKOUT_SUCCESS_URL=http://localhost:3000/subscription/success
STRIPE_CHECKOUT_CANCEL_URL=http://localhost:3000/subscription/cancel
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/mypage
